@charset "UTF-8";

body{
	margin: 0 auto;
}

#container{
	margin: 0 auto;
	width: 1220px;
	min-height: 650px;
	text-align: center;
}

section {
	margin: 0 auto;
	height: auto;
	text-align: center;
	padding: 30px;
}

#top, p{
	margin: 10px;
	padding-top: 5px;
	height: 60px;
	text-align: left;
}

hr {
	border-bottom : 1px #750000 solid;
}

.right {
	margin: 10px;
	padding: 10px;
	width: 1120px;
	float: right;
	text-align: right;
}

.form {
	width: 800px;
	margin: 0 auto;
	text-align: center;
	padding: 10px;
}

.form div {
	width: 800px;
	float: left;
}

.form div input {
	width: 600px;
	float: right;
	margin: 5px;
}

td input{
	width: 800px;
	float: right;
}

textarea {
	width: 800px;
	height: 150px;
	margin: 5px;
	padding: 3px;
	float: right;
}

#fromDate{
	width: 100px;
}

#b {
	width: 1120px;
	margin: 0 auto;
	margin-top: 10px;
	border: 0px;
}

.private {
	float: right;
}

th, td {
	padding: 5px;
	border-bottom: 1px solid silver;
}

#c{
	border-bottom: 1px solid silver;
}

#d{
	border: 0px;
}

a, button {
	cursor: pointer;
}

a{
	margin: 5px;
}

select {
	height: 24px;
	margin-left: 10px;
	vertical-align: top;
}

input {
	height: 14px;
	padding: 3px;
	vertical-align: top;
}

.form input{
	width: 800px;
}

.title {
	width: 35%;
	border-bottom: 1px solid silver;
}

span {
	color: blue;
}