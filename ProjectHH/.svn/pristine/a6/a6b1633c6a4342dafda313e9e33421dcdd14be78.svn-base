@charset "UTF-8";

body{
	margin: 0 auto;
}

#container{
	margin: 0 auto;
	width: 1220px;
	min-height: 0px;
	text-align: center;
}

section {
	margin: 0 auto;
	height: auto;
	text-align: center;
	padding: 30px;
}

#left {
	padding-top: 10px;
	text-align: center;
	float: left;
	width: 120px;
}

#top, p{
	margin: 10px;
	padding-top: 5px;
	height: 60px;
	text-align: left;
}

hr {
	border-bottom : 1px #750000 solid;
}


.right {
	margin: 10px;
	padding: 10px;
	width: 1120px;
	float: right;
	text-align: right;
}

.form {
	width: 800px;
	margin: 0 auto;
	text-align: center;
	padding: 10px;
}

.form div {
	width: 800px;
	float: left;
}

.form div input {
	width: 600px;
	float: right;
	margin: 5px;
}


.form textarea {
	width: 600px;
	height: 150px;
	margin: 5px;
	padding: 3px;
	float: right;
}

table {
	width: 1000px;
	margin: 0 auto;
	margin-top: 10px;
}

th, td {
	padding: 5px;
	border-bottom: 1px solid silver;
}

a, button {
	cursor: pointer;
}

a{
	margin: 5px;
}

.title {
	width: 35%;
}