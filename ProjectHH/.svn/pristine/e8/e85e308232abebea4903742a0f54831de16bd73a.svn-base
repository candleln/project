.dropdown-button {
	position: relative;
	background-color: white;
	padding: 8px;
	font-size: 15px;
	border: none;
	height: 95px;
	width: 300px;
}

.dropdown {
	border: 1px RED solid;
	position: relative;
	display: inline-block;
}

.dropdown-content {
	text-align: center;
	display: none;
	position: absolute;
	background-color: white;
	min-width: 75px;
	padding: 5px;
	box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.5);
	width: 300px;
}

.dropdown-content a {
	color: black;
	padding: 8px;
	text-decoration: none;
	display: block;
}

.dropdown-content a:hover {
	background-color: silver;
}

.dropdown:hover .dropdown-content {
	display: block;
}

.dropdown:hover .dropdown-button {
	background-color: white;
}

.adbox {
	border: 1px black solid;
	border: 1px white solid;
	height: 300px;
}

a:hover {
	color: black;
}

a {
	text-decoration: none;
	color: black;
}